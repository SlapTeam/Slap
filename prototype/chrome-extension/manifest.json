{

  "name": "Slap",
  "version": "0.1",
  "description": "Share ideas in your web app.",
  "manifest_version": 2,
  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
            "128": "icons/icon128.png" },
  "default_locale": "en",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png"
      //"38": "images/icon38.png"
    },
    "default_title": "Slap!"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "web_accessible_resources": [
    "src/menu.html"
  ],

  //============================================================================
  // PERMISSIONS
  //============================================================================

  // http://code.google.com/chrome/extensions/manifest.html#permissions
  "permissions": [
    "tabs",
    "activeTab",
    "identity",
    "identity.email",
    "http://*/*",
    "https://*/*"
